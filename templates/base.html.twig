<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>AssetManager - {% block title %}!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <style>
            .center {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 100vh;
            }
        </style>
    </head>
    <body>
        {% if app.user == null %}
            <a href="{{ path('app_login') }}" class="btn btn-info">
                Login >></a
            >
            <a href="{{ path('app_register') }}" class="btn btn-info">
                Register >></a
            >
        {% endif %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
